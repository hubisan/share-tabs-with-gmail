{
  "manifest_version": 2,
  "name": "Share Tabs with Gmail",
  "version": "0.1.0",
  "description": "Collects titles and addresses of open tabs and sends them via Gmail",
  "homepage_url": "https://github.com/hubisan/share-tabs-with-gmail",
  "permissions": [
    "tabs",
    "storage",
    "activeTab"
  ],
  "background": {
    "scripts": [
      "src/background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*"
      ],
      "js": [
        "src/contentScript.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": {
      "16": "assets/icons/icon.png",
      "48": "assets/icons/icon.png",
      "128": "assets/icons/icon.png"
    },
    "default_title": "Share Tabs with Gmail"
  },
  "icons": {
    "16": "assets/icons/icon.png",
    "48": "assets/icons/icon.png",
    "128": "assets/icons/icon.png"
  },
  "options_ui": {
    "page": "src/options/options.html",
    "browser_style": true
  },
  "commands": {
    "share-all-tabs": {
      "suggested_key": {
        "default": "Alt+Shift+J"
      },
      "description": "Share all tabs or selected tabs"
    },
    "share-active-tab": {
      "suggested_key": {
        "default": "Alt+Shift+K"
      },
      "description": "Share the active tab"
    }
  }
}